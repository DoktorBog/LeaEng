<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="doktor.bog.leaeng.Game">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/edWord"
        android:layout_centerHorizontal="true"
        android:text="answer the phone, answer back, auto answer, correct answer, answer sheet, answer questions, answer a question, question and answer, answer to, answer for"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/tvNumber"
        android:layout_above="@+id/edAnswer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edAnswer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonNext"
        android:hint="answer"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/buttonNext" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/buttonNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_accept"
        android:layout_marginRight="12dp" />

    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1/10"
        android:id="@+id/tvNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/primary"
        android:isScrollContainer="false"
        android:textSize="30dp"
        android:layout_alignRight="@+id/edWord"
        android:layout_alignEnd="@+id/edWord" />

</RelativeLayout>
